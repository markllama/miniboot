#
# This file contains the lease reservations for the bootable systems.
#
# nodes:
#   - arch: <x86_64|aarch64>
#     hostname: <hostname>
#     nics:
#       - name: <device name>
#         network: <net name>
#         mac_address: <mac address>
#         ipv4_address: <dotted quad>
#       ...
#     provisioning_nic: <device name>   # optional - triggers PXE boot section
#
{%- for node in nodes %}

host pxeclient-{{ node.hostname }} {
{%- for nic in node.nics %}
{%- set ipv4_address = nic.ipv4_address.split('/')[0] %}
  hardware ethernet {{ nic.mac_address | lower }} ;
  fixed-address {{ ipv4_address }} ;
{%- endfor %}  
{%- if node.provisioning_nic is defined %}
  next-server {{ network.addr }} ;
  if exists user-class and option user-class = "iPXE" {
    filename "http://{{ network.addr }}:{{ http.port }}/ipxe/{{ node.hostname }}.ipxe";
  } elsif option client-architecture = 00:00 {
    filename "undionly.kpxe";
  } else {
    filename "ipxe.efi";
  }
{%- endif %}
}
{%- endfor %}
